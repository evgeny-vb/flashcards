<h1><%= @pack.name %></h1>
<%= link_to 'Добавить карточку', new_pack_card_path(@pack), id: 'add-card' %>
<table>
  <th>Оригинальный текст</th>
  <th>Переведенный текст</th>
  <th>Дата пересмотра</th>
  <th></th>
  <th></th>
  <% @cards.each do |card| %>
    <tr class="rspec-card">
      <td><%= card.original_text %></td>
      <td><%= card.translated_text %></td>
      <td><%= card.review_date&.strftime('%d/%m/%y') %></td>
      <td><%= link_to 'Редактировать', edit_card_path(card.id) %></td>
      <td><%= link_to 'Удалить', card, method: :delete, data: { confirm: 'Вы уверены?' } %></td>
    </tr>
  <% end %>
</table>
