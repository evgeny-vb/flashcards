<h1>Все карточки</h1>
<ul>
  <table>
    <th>Оригинальный текст</th>
    <th>Переведенный текст</th>
    <th>Дата пересмотра</th>
    <th></th>
    <th></th>
    <% @cards.each do |card| %>
      <tr>
        <td><%= card.original_text %></td>
        <td><%= card.translated_text %></td>
        <td><%= card.review_date&.strftime('%d/%m/%y') %></td>
        <td><%= link_to 'Редактировать', edit_card_path(card.id) %></td>
        <td><%= link_to 'Удалить', card, method: :delete, data: { confirm: 'Вы уверены?' } %></td>
      </tr>
    <% end %>
  </table>
</ul>
